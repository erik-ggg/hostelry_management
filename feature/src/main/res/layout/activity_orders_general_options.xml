    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".com.app.activities.order.OrdersGeneralOptionsActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/ordersGeneralPreorderButton"
        android:text="@string/es_ordersGeneralPreorderButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
