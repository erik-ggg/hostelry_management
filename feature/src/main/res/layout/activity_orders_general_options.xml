    <Button
        android:id="@+id/ordersGeneralOrderButton"
        android:text="@string/es_ordersGeneralOrderButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>